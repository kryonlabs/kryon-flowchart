{
  "$schema": "https://kryon.dev/schemas/plugin-bindings-v1.json",
  "version": "1.0",
  "plugin": {
    "name": "canvas",
    "version": "1.0.0",
    "description": "Love2D-inspired immediate mode canvas drawing",
    "license": "0BSD"
  },
  "components": [
    {
      "name": "Canvas",
      "type": 10,
      "ir_type": "IR_COMPONENT_CANVAS",
      "description": "Immediate mode drawing canvas with Love2D-style API",
      "properties": [
        {
          "name": "width",
          "type": "int",
          "required": false,
          "default": "800",
          "description": "Canvas width in pixels",
          "ir_function": "ir_set_width",
          "ir_param_transform": "dimension_int_pixels"
        },
        {
          "name": "height",
          "type": "int",
          "required": false,
          "default": "600",
          "description": "Canvas height in pixels",
          "ir_function": "ir_set_height",
          "ir_param_transform": "dimension_int_pixels"
        },
        {
          "name": "backgroundColor",
          "type": "color",
          "required": false,
          "default": "#000000",
          "description": "Canvas background color",
          "ir_function": "ir_set_background_color",
          "ir_param_transform": "rgba_components"
        }
      ]
    }
  ],
  "helpers": {
    "parseColor": {
      "description": "Convert color string to IRColor",
      "implementation": "case_mapping",
      "cases": {
        "white": {"r": 255, "g": 255, "b": 255, "a": 255},
        "black": {"r": 0, "g": 0, "b": 0, "a": 255},
        "red": {"r": 255, "g": 0, "b": 0, "a": 255},
        "green": {"r": 0, "g": 255, "b": 0, "a": 255},
        "blue": {"r": 0, "g": 0, "b": 255, "a": 255},
        "yellow": {"r": 255, "g": 255, "b": 0, "a": 255},
        "cyan": {"r": 0, "g": 255, "b": 255, "a": 255},
        "magenta": {"r": 255, "g": 0, "b": 255, "a": 255},
        "gray": {"r": 128, "g": 128, "b": 128, "a": 255},
        "grey": {"r": 128, "g": 128, "b": 128, "a": 255},
        "orange": {"r": 255, "g": 165, "b": 0, "a": 255},
        "purple": {"r": 128, "g": 0, "b": 128, "a": 255}
      },
      "default": {"r": 255, "g": 255, "b": 255, "a": 255}
    }
  }
}
